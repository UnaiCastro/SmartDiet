<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".iu.PaginaPrincipal.Alimento.AlimentoInformacionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/AlimentoInforFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/ic_contrasena"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/AlimentoInforNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_margin="16dp"
                android:textSize="30sp"
                android:layout_gravity="center"
                tools:text="Aguacate"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/AlimentoInforDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginHorizontal="25dp"
                android:text="1111111111111111111111111111111111111111111111111111111111111111111111"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/AlimentoInforTipo"
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_marginVertical="8dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="Tipo:"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/AlimentoInforCalorias"
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_marginVertical="8dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="Calorias:"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/AlimentoInforGrasas"
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_marginVertical="8dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="Grasas:"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/AlimentoInforCarbohidratos"
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_marginVertical="8dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="Carbohidratos:"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/AlimentoInforProteinas"
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_marginVertical="8dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="Proteinas:"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/AlimentoInforAgua"
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_marginVertical="8dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="Agua:"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/AlimentoInforMinerales"
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_marginVertical="8dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="Minerales:"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/AlimentoInforVitaminas"
                android:layout_marginHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_marginVertical="8dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="Vitaminas:"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>


</FrameLayout>