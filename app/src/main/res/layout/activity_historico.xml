<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".iu.PaginaPrincipal.Historico.HistoricoActivity">

    <com.google.android.material.tabs.TabLayout
        style="@style/Widget.Material3.TabLayout"
        android:id="@+id/PartidoTabLayout"
        android:layout_width="0dp"
        app:tabMode="fixed"
        app:tabIndicatorGravity="bottom"
        app:tabIndicatorAnimationMode="elastic"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabSelectedTextColor="@color/md_theme_primary"
        app:tabIndicatorColor="@color/md_theme_primary" />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/PartidosTabLayoutViewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PartidoTabLayout"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>