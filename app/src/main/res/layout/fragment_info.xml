<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".iu.PaginaPrincipal.Info.InfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tituloInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/miPerfil"
                android:textAlignment="center"
                android:textSize="26sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPerfilInfo"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginStart="140dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_users" />

            <TextView
                android:id="@+id/correoInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Error"
                android:textSize="20sp" />

            <Button
                style="@style/Widget.Material3.Button.TextButton"
                android:id="@+id/actuPerfilInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ActualizarImgPerfil"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_marginHorizontal="10dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/nombreInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                tools:text="Error"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"/>

            <Button
                android:id="@+id/editarNombreInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/editarNombre"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"/>


            <Button
                android:id="@+id/cambiarContrInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/cambiarPassword"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"/>

            <Button
                android:id="@+id/idiomaInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/cambiarIdioma"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/temaInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/modoOscuro"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"
                />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/notisInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activarNotificaciones"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"
                />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BTNHistorico"
            android:text="@string/historico"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BTNgestiondietas"
            android:text="@string/gestionDietas"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BTNlogout"
            android:text="@string/logout"/>
    </LinearLayout>


</FrameLayout>