<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F192F">

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/porridge_recipe_title"
        android:textColor="#F44336"
        android:textColorLink="#A72929"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="45dp" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/porridge_recipe_source"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="87dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="145dp"
        android:layout_height="47dp"
        android:background="#6EC7A7"
        android:progressTint="#FFEB3B"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="87dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="412dp"
        android:layout_height="285dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="170dp"
        tools:srcCompat="@drawable/porridge" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VER RECETA"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="422dp" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/porridge_recipe_fact"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="500dp" />
</androidx.constraintlayout.widget.ConstraintLayout>