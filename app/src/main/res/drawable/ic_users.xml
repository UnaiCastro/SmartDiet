<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <solid android:color="@color/cardview_light_background"/>
    <!-- Este atributo determina el color del círculo -->
    <stroke
        android:width="1dp"
        android:color="@color/cardview_dark_background"/>
    <size
        android:width="50dp"
        android:height="50dp" />

    <!-- Aquí puedes ajustar el tamaño del círculo ajustando los valores de "android:width" y "android:height" -->
</shape>

